<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <template id="assets_backend" name="Backend Theme"
                  inherit_id="web.assets_backend">
            <xpath expr=".">
                <link rel="stylesheet"
                      href="/odoo_background_color/static/src/scss/theme_style_backend.scss"/>
            </xpath>
        </template>
        <template id="assets_frontend" name="Frontend Theme"
                  inherit_id="web.assets_frontend">
            <xpath expr=".">
                <link rel="stylesheet"
                      href="/odoo_background_color/static/src/scss/theme_style_frontend.scss"/>
            </xpath>
        </template>
    </data>
</odoo>
